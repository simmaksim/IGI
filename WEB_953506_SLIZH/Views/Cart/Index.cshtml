@model IEnumerable<CartItem>
@{
    ViewData["Title"] = "Index";
}
<h1>Корзина</h1>
<table class="table">
    <thread>
        <tr>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/@item.Player.Photo" alt="No image" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(m => item.Player.NickName)
                </td>
                <td>
                    <a asp-controller="Cart"
                       asp-action="Delete"
                       asp-route-id="@item.Player.PlayerId"
                       class="btn btn-outline-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>